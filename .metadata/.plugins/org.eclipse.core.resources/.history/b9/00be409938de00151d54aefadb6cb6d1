package farkle;
import farkle.*;

public class Player {
	private Dice die = new Dice();
	
	private int totalScore;
	private int currentScore;
	
	public int getCurrent(){
		return currentScore;
	}
	
	public void setCurrent(int score){
		currentScore += score;	
	}
	
	public int getTotal(){
		return totalScore;
	}
	
	public void setTotal(int score){
		totalScore += score;
	}
	
}
