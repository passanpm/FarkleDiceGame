public class Dice {

	private int[] roll = new int[6];
	private int[] bank = new int[6];
	
	
	public static void farkle(){
		
		
	}
	
	
	public static void resetDice(){
		
		
	}
	
	/*
	 * 
	 */
	public static void roll(int dieMax, int dieMin, int amount){
		Random r = new Random();
		int randomNumber = 0;
		for(int i = 0; i < amount; i++){
			randomNumber = r.nextInt((dieMax - dieMin) + 1) + dieMin;
			
		}
	
	}
	
}
